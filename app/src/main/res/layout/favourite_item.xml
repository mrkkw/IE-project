<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:elevation="6dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fav_item_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/question_pic"/>

            <TextView
                android:id="@+id/fav_item_tip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fav_item_image"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:shadowColor="@color/light_gray"
                android:text="Tips"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fav_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:layout_below="@+id/fav_item_image"
                android:textColor="#808080"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fav_item_explore_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fav_item_text"
                android:layout_alignLeft="@+id/fav_item_text"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:clickable="true"
                android:justificationMode="inter_word"
                android:shadowColor="@color/light_gray"
                android:text="EXPLORE"
                android:textColor="#f6aa3e"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fav_bin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/fav_item_text"
                android:layout_alignParentRight="true"
                android:background="@drawable/bin"
                android:layout_margin="9dp"
                android:elevation="6dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>