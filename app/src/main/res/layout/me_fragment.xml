<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Me.Me">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_personal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/portrait_me"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/alert_icon" />

            <TextView
                android:id="@+id/nickname_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:text="Portrait"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:background="@drawable/linear_layout_background_shape"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "9dp"
            android:background="@drawable/linear_layout_background_shape"
            android:orientation="vertical"
            android:elevation="6dp">

            <TableLayout
                android:id="@+id/TableLayout_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:elevation="6dp"
                android:orientation="vertical">

                <TableRow>
                    <ImageView
                        android:id="@+id/gender_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="9dp"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:layout_margin="9dp"
                        />

                    <TextView
                        android:id="@+id/gender_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/linear_layout_background_shape"
                        android:layout_margin="9dp"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <ImageView
                        android:id="@+id/age_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="9dp"
                        android:background="@drawable/age_icon"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:layout_margin="9dp"
                        />

                    <TextView
                        android:id="@+id/age_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/linear_layout_background_shape"
                        android:layout_margin="9dp"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/fav_topic_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="9dp"
                        android:background="@drawable/love_fav"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:layout_margin="9dp"
                        />

                    <TextView
                        android:id="@+id/fav_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/linear_layout_background_shape"
                        android:layout_margin="9dp"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/living_area_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/house_icon"
                        android:layout_margin="9dp"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:layout_margin="9dp"
                        />

                    <TextView
                        android:id="@+id/home_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/linear_layout_background_shape"
                        android:layout_margin="9dp"
                        android:textColor="#000000"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@drawable/me_bbc"/>
    </RelativeLayout>

</LinearLayout>