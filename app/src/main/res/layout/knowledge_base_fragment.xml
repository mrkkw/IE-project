<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.KnowledgeBase.KnowledgeBase">

    <LinearLayout
        android:id="@+id/KB_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_layout_background_shape"
        android:backgroundTint="@color/light_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/KB_Falls"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="9dp"
            android:clickable="true"
            android:src="@drawable/kb_click_background"
            android:scaleType="fitXY"
            android:elevation="6dp"
            android:background="@drawable/linear_layout_background_shape"
        />

        <ImageView
            android:id="@+id/KB_Transport"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="9dp"
            android:clickable="true"
            android:src="@drawable/kb_click_background"
            android:scaleType="fitXY"
            android:elevation="6dp"
            android:background="@drawable/linear_layout_background_shape"
            />

        <ImageView
            android:id="@+id/KB_Machinery"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="9dp"
            android:clickable="true"
            android:src="@drawable/kb_click_background"
            android:scaleType="fitXY"
            android:elevation="6dp"
            android:background="@drawable/linear_layout_background_shape"
            />

        <ImageView
            android:id="@+id/KB_Heat_Induced_Stress_Injuries"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="9dp"
            android:clickable="true"
            android:src="@drawable/kb_click_background"
            android:scaleType="fitXY"
            android:elevation="6dp"
            android:background="@drawable/linear_layout_background_shape"
            />
    </LinearLayout>

</ScrollView>