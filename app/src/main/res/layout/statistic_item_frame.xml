<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_layout_background_shape">

        <ImageView
            android:id="@+id/statistic_image_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="@drawable/linear_layout_background_shape"/>

        <ImageView
            android:id="@+id/back_stat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/statistic_image_option"
            android:background="@drawable/back_button_icon"/>

        <ImageView
            android:id="@+id/forward_stat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            android:background="@drawable/forward_button_icon"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</LinearLayout>